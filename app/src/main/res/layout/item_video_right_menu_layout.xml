<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:padding="5dp">
    <com.example.jay.packageandroidproject.view.XCircleImageView
        android:id="@+id/video_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/pp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/lovely"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="5.3W"
        android:drawableTop="@mipmap/lovely"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="5.3W"
        android:drawableTop="@mipmap/message"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="5.3W"
        android:drawableTop="@mipmap/share"/>

</LinearLayout>