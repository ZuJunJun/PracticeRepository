<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/home_grid_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.example.jay.packageandroidproject.view.SpringIndicator
            android:id="@+id/spring_indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:vpi_default_color="@color/colorGray"
            app:vpi_distance="17dp"
            app:vpi_distanceType="BY_DISTANCE"
            app:vpi_indicatorType="SPRING"
            app:vpi_radius="4dp"
            app:vpi_selected_color="@color/colorRed" />
    </LinearLayout>

</android.support.v7.widget.CardView>