<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/video_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:text="1@上的花费时间都发江湖粉红色"/>
        <TextView
            android:id="@+id/video_from"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:text="对方来自XXX"/>
        <TextView
            android:id="@+id/video_musical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="忘记你太难"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@mipmap/musical"/>
    </LinearLayout>
    <com.example.jay.packageandroidproject.view.AnimCircleImageView
        android:id="@+id/musical_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/pp"/>

</LinearLayout>