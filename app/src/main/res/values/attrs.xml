<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="whorlview_style">
        <attr name="whorlview_circle_colors" format="string" />
        <attr name="whorlview_circle_speed" format="integer" />
        <attr name="whorlview_parallax">
            <enum name="fast" value="1" />
            <enum name="medium" value="0" />
            <enum name="slow" value="2" />
        </attr>
        <attr name="whorlview_sweepAngle" format="float" />
        <attr name="whorlview_strokeWidth" format="float" />
    </declare-styleable>

    <declare-styleable name="SpringIndicator">
        <attr name="vpi_selected_color" format="color|reference"/>
        <attr name="vpi_default_color" format="color|reference"/>
        <attr name="vpi_radius" format="dimension|reference"/>
        <attr name="vpi_length" format="dimension|reference"/>
        <attr name="vpi_distance" format="dimension|reference"/>
        <attr name="vpi_num" format="integer"/>
        <attr name="vpi_indicatorType">
            <enum name="LINE" value="0" />
            <enum name="CIRCLE" value="1" />
            <enum name="CIRCLE_LINE" value="2" />
            <enum name="BEZIER" value="3" />
            <enum name="SPRING" value="4" />
        </attr>
        <attr name="vpi_distanceType">
            <enum name="BY_RADIUS" value="0" />
            <enum name="BY_DISTANCE" value="1" />
            <enum name="BY_LAYOUT" value="2" />
        </attr>
        <attr name="vpi_animation" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="XCircleImageView">
        <attr name="xround_radius" format="dimension|reference"/>
        <attr name="border_width" format="dimension|reference"/>
        <attr name="border_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="ClockView">
        <attr name="cv_roundColor" format="color|reference"/>
        <attr name="cv_pointColor" format="color|reference"/>
        <attr name="cv_pointRadius" format="dimension|reference"/>
        <attr name="cv_longDegreeColor" format="color|reference"/>
        <attr name="cv_shortDegreeColor" format="color|reference"/>
        <attr name="cv_roundPadding" format="dimension|reference"/>
        <attr name="cv_degreeTextSize" format="dimension|reference"/>
        <attr name="cv_hourIndicatorWidth" format="dimension|reference"/>
        <attr name="cv_minuteIndicatorWidth" format="dimension|reference"/>
        <attr name="cv_secondIndicatorWidth" format="dimension|reference"/>
        <attr name="cv_indicatorRadius" format="dimension|reference"/>
        <attr name="cv_indicatorEndLength" format="dimension|reference"/>
        <attr name="cv_hourIndicatorColor" format="color|reference"/>
        <attr name="cv_minuteIndicatorColor" format="color|reference"/>
        <attr name="cv_secondIndicatorColor" format="color|reference"/>
    </declare-styleable>
</resources>